@import "~sanitize.css"
@import "vars.styl"
@import "header.styl"
@import "nav.styl"


*{
  box-sizing: border-box;
  }

body {
  margin:0;
  background-color: $white;
  font-family: 'Roboto', sans-serif;
}

h1 {
  color: $black;
  font-size:20px;
}

h2 {
  color: $black;
  font-size: 100px;
  font-weight: 400;
  line-height: 150px;
}

h3 {
  color: $black;
  font-size:80px;
  font-weight: 200;
  margin:0;
}

h4 {
  color: $black;
  font-size:20px;
  font-weight:400;
  margin:0;
  text-decoration: underline black;
}

h4:active {
  text-decoration: underline black;
}


h4:active {
  text-decoration: underline black;
}







// NAV

nav {
  // Space
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-end;
  align-items: center;
  // Text
  font-size: 14px;
  font-weight: 400;
  text-decoration:none;
  text-transform: uppercase;
  padding: 30px;
  background-color: $white;
  top: 0;
  width: 100%;
  position: fixed;
}

  .single-menu {
      text-decoration: none;
      margin-right: 20px;
      color:$gray;
  }

  .single-menu:visited {
      text-decoration: none;
      color:$gray;
  }

  .single-menu:hover {
      text-decoration: none;
      color:$black;
  }

  .single-menu:active {
      text-decoration: none;
      color:$gray;
  }

